{% extends 'base.html.twig' %}

{% block title %}Anmelden
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Anmeldung</h1>

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.lastname) }}
		{{ form_row(registrationForm.firstname) }}
		{{ form_row(registrationForm.picture) }}
		{{ form_row(registrationForm.company) }}
		{{ form_row(registrationForm.phone) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Passwort'
        }) }}
		{{ form_row(registrationForm.agreeTerms, {
			label: 'Sie sollten unseren Bedingungen zustimmen.'

        }) }}


		<button type="submit" class="btn btn-primary btn-lg mt-4">Anmelden</button>

		{{ form_end(registrationForm) }}</div>

{% endblock %}
