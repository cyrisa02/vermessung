{% extends 'base.html.twig' %}

{% block title %}Kunden
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Kunden</h1>

		<table class="table">
			<tbody>

				<tr>
					<th>Name</th>
					<td>{{ client.lastname }}</td>
				</tr>
				<tr>
					<th>Vorname</th>
					<td>{{ client.firstname }}</td>
				</tr>
				<tr>
					<th>Bemerkung</th>
					<td>{{ client.description }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ client.email }}</td>
				</tr>
				<tr>
					<th>Anschrift</th>
					<td>{{ client.address }}</td>
				</tr>
				<tr>
					<th>Postleitzahl</th>
					<td>{{ client.zipcode }}</td>
				</tr>
				<tr>
					<th>Stadt</th>
					<td>{{ client.city }}</td>
				</tr>
				<tr>
					<th>Erstellung</th>
					<td>{{ client.createdAt ? client.createdAt|date('d-m-Y') : '' }}</td>
				</tr>
				<tr>
					<th>geprüft</th>
					<td>{{ client.isValid ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Telefon</th>
					<td>{{ client.phone }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_client_index') }}">Zurück</a>


		<a class="btn btn-primary btn-lg mt-4 ms-4" href="{{ path('app_client_edit', {'id': client.id}) }}">Ändern</a>


		{{ include('pages/client/_delete_form.html.twig') }}</div>

{% endblock %}
