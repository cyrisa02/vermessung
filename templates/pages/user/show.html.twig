{% extends 'base.html.twig' %}

{% block title %}Benutzer
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Benutzer</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th>Vorname</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Bild</th>
					<td>
						{% if user.picture is defined %}
							<img src="{{ asset('uploads/') }}{{ user.picture }}" alt="{{ user.lastname }}" style="max-width: 7rem; height: auto; border-radius: 50%;">
						{% else %}
							<p>Kein Bild</p>
						{% endif %}
					</td>

				</tr>
				<tr>
					<th>Geselschaft</th>
					<td>{{ user.company }}</td>
				</tr>
				<tr>
					<th>Erstellung</th>
					<td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
				</tr>
				<tr>
					<th>geprüft</th>
					<td>{{ user.isVerified ? 'Ja' : 'Nein' }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_user_index') }}">Zurück</a>


		<a class="btn btn-primary btn-lg mt-4 ms-3" href="{{ path('app_user_edit', {'id': user.id}) }}">Ändern</a>


		{{ include('pages/user/_delete_form.html.twig') }}</div>

{% endblock %}
